<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayout"
    android:layout_width="341dp"
    android:layout_height="243dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.002">

    <ImageView
      android:id="@+id/imageView"
      android:layout_width="281dp"
      android:layout_height="226dp"
      android:layout_marginStart="24dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="24dp"
      android:layout_marginBottom="16dp"
      android:contentDescription="logo"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.43"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/umbrella" />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <Button
    android:id="@+id/btnLoadVision"
    android:layout_width="276dp"
    android:layout_height="46dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:background="@android:color/transparent"
    android:fontFamily="@font/armata"
    android:lineSpacingExtra="8sp"
    android:text="Vision"
    android:textAllCaps="false"
    android:textColor="@color/cardview_light_background"
    android:typeface="monospace"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

  <Button
    android:id="@+id/btnLoadHistory"
    android:layout_width="276dp"
    android:layout_height="46dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:background="@android:color/transparent"
    android:fontFamily="@font/armata"
    android:lineSpacingExtra="8sp"
    android:text="History"
    android:textAllCaps="false"
    android:textColor="@color/cardview_light_background"
    android:typeface="monospace"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btnLoadVision" />

  <Button
    android:id="@+id/btnLoadContact"
    android:layout_width="276dp"
    android:layout_height="46dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:background="@android:color/transparent"
    android:fontFamily="@font/armata"
    android:lineSpacingExtra="8sp"
    android:text="Contact"
    android:textAllCaps="false"
    android:textColor="@color/cardview_light_background"
    android:typeface="monospace"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.495"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btnLoadHistory" />

  <TextView
    android:id="@+id/txtVision"
    android:layout_width="272dp"
    android:layout_height="112dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="32dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btnLoadContact"
    app:layout_constraintVertical_bias="0.171" />

  <com.google.android.material.bottomnavigation.BottomNavigationView
    android:layout_width="414dp"
    android:layout_height="133dp"
    android:layout_marginTop="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtVision" />

</androidx.constraintlayout.widget.ConstraintLayout>

